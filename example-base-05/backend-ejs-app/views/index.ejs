<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Backend EJS App</title>
</head>
<body>
  <h1>Welcome to Backend EJS App</h1>
  <button onclick="fetchData('/')">Fetch Success Message</button>
  <button onclick="fetchData('/topics')">Fetch Java Topics</button>
  <button onclick="fetchData('/books')">Fetch Java Books</button>

  <div id="result"></div>

  <script>
    async function fetchData(endpoint) {
      try {
        const response = await fetch(endpoint);
        const data = await response.json();
        document.getElementById('result').innerHTML = JSON.stringify(data, null, 2);
      } catch (error) {
        console.error('Error:', error);
      }
    }
  </script>
</body>
</html>
